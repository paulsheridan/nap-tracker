{% extends "base.jinja2" %}
{% block content %}
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Login Panel</h3>
          </div>
          <div class="panel-body">
            <form role="form" id="reset-email-request">
              <fieldset>
                <div class="form-group">
                  <label id="link-success">If your email is in our system, a Password Reset email will arrive shortly.</label>
                </div>
                <div class="form-group">
                  <input class="form-control" placeholder="E-mail" name="email" type="email" autofocus>
                </div>
                <input class="btn btn-primary btn-block" type="submit"value="Send Password Reset Email">
              </fieldset>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block logic %}
  <script src="/js/password.js"></script>
{% endblock %}
