{% extends "base.jinja2" %}
{% block content %}
    <section id="timers">
      <div class="container">
        <h2 class="text-center">Timers</h2>
        <hr class="star-primary">
        <div class="row">
          <div class="col-sm-4 portfolio-item timer-end">
            <h3>Current Nap:</h3>
            <a class="current-timer">
              <div class="caption">
                <div class="caption-content">
                <div id="countup">
                  It's been
                  <p id="days">00</p>
                  <p class="timeRefDays">days</p>
                  <p id="hours">00</p>
                  <p class="timeRefHours">hours</p>
                  <p id="minutes">00</p>
                  <p class="timeRefMinutes">minutes</p>
                  <p id="seconds">00</p>
                  <p class="timeRefSeconds">second</p>
                </div>
                </div>
              </div>
            </a>
          </div>
          <div class="col-sm-4 portfolio-item timer-start">
            <h3>Last Nap:</h3>
            <ul id="previous-timer">
            </ul>
          </div>
          <div class="text-center mt-4">
            <a class="btn btn-xl btn-outline-light timer-start">
              <i class="fa fa-download mr-2"></i>
              Start Timer
            </a>
            <a class="btn btn-xl btn-outline-light timer-end">
              <i class="fa fa-download mr-2"></i>
              Stop Timer
            </a>
          </div>
        </div>
      </div>
    </section>
{% endblock %}

{% block header %}
{% endblock %}

{% block logic %}
  <script src="/vendor/moment/moment.min.js"></script>
  <script src="/js/timers.js"></script>
{% endblock %}
